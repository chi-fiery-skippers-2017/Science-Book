<%= form_for :proposal, url: proposal_path(:proposal) do |f| %>
  <%= render "shared/errors", object: @proposal %>
  <p>
    <%= f.label :title %>
    <%= f.text_area :title %>
  </p>

  <p>
    <%= f.label :summary %>
    <%= f.text_area :summary %>
  </p>

  <p>
    <%= f.label :hypothesis %>
    <%= f.text_area :hypothesis %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
